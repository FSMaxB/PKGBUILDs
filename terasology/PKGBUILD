pkgname=terasology
pkgver=36
pkgrel=1
pkgdesc="Yet another high resolution game with blocks like Minecraft!"
arch=('x86_64' 'i686')
license=('Apache')
url="http://blog.movingblocks.net/blockmania"
options=('!strip')
depends=('java-runtime' 'xorg-server-utils' 'openal')
conflicts=('terasology')
source=( 'terasology' 'terasology.desktop' "http://jenkins.movingblocks.net/job/TerasologyStable/${pkgver}/artifact/build/distributions/Terasology.zip" )
md5sums=('91205260ca32bedee930834946ee0fc5'
         '4660dfcc7b4ea5df0035077b39d3e763'
         '8533168643538159f58b3a0df30117c8')

package() {
    mkdir -p "${pkgdir}/usr/share/applications"
    mkdir -p "${pkgdir}/usr/share/games"
    mkdir -p "${pkgdir}/usr/bin"

    cd $srcdir
    chmod 755 terasology
    cp terasology "${pkgdir}/usr/bin/"
    cp terasology.desktop "${pkgdir}/usr/share/applications"
    rm terasology terasology.desktop Terasology.zip
    cp -R $srcdir "${pkgdir}/usr/share/games/Terasology"
}
