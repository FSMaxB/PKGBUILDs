# Maintainer: Max Bruckner
pkgname=update-grub
pkgver=0.0.1
pkgrel=4
pkgdesc="Simple wrapper creating new GRUB2 configuration."
arch=('any')
url='http://packages.ubuntu.com/precise/grub2-common'
license=('GPL2')
depends=('grub')
source=( 'update-grub' )
md5sums=('c3ed4e339f7416d43dce67dc095379f2')

package() {
  mkdir -p $pkgdir/usr/bin
  cp $srcdir/update-grub $pkgdir/usr/bin/
  chmod +x $pkgdir/usr/bin/update-grub
}
