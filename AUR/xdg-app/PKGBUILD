# Maintainer: Max Bruckner
_pkgbase=xdg-app
pkgname="${_pkgbase}-git"
pkgver=r86.123b0f3
pkgrel=1
pkgdesc="Tool for managing sandboxed applications and their runtimes."
arch=( "i686" "x86_64" )
url="https://github.com/alexlarsson/xdg-app"
license=('unknown')
depends=( 'ostree')
makedepends=( 'git' )
provides=( 'xdg-app' )
conflicts=( 'xdg-app' )
source=( "git+https://github.com/alexlarsson/${_pkgbase}.git#commit=123b0f34d4b904cc390e04ffc87caaf0d92b8c3e" )
md5sums=( 'SKIP' )

pkgver() {
	cd "${srcdir}/${_pkgbase}"
	echo "r$(git rev-list --count HEAD).$(git rev-parse --short HEAD)"
}

prepare() {
	cd "${srcdir}/${_pkgbase}"
	./autogen.sh --prefix=/usr
}

build() {
	cd "${srcdir}/${_pkgbase}"
	make
}

package() {
	cd "${srcdir}/${_pkgbase}"
	make DESTDIR="$pkgdir" install
}
