pkgname=terasology-devbuild
pkgver=1107
pkgrel=1
pkgdesc="Yet another high resolution game with blocks like Minecraft! (Last succesful development build)"
arch=('x86_64' 'i686')
license=('Apache')
url="http://terasology.org"
options=('!strip')
depends=('java-runtime' 'xorg-server-utils' 'openal')
source=( 'terasology-devbuild' 'terasology-devbuild.desktop' "http://jenkins.movingblocks.net/job/Terasology/${pkgver}/artifact/build/distributions/Terasology.zip")
sha512sums=('40f91bbf9413f748cf18e4da18edc9bfd2eadcdf51b4f90075ae295ae1cadf3299d5a3f0ee2c5eeb3ce9a3ede6244331ad9856b104fd3d75c16a411d3ea1c28f'
            '5feef57542bd2fe66ba4111619ff39acb5befe0ca0da061fcad972a4d0b62ff7dfb7a7675b668fdb5ae075b12b9f5518e155dfb47e067b5ab27322f6423a8097'
			'220439dd3b6628c944ff8b578add9a13b0facce797161d74b9b38fc6337968bdf3edf4981522611774305b62e79502960c76a7ae6417cda926a0df47972745f3')

package() {
    install -Dm 755 "$srcdir/terasology-devbuild" "$pkgdir/usr/bin/terasology-devbuild"
    install -Dm 644 "$srcdir/terasology-devbuild.desktop" "$pkgdir/usr/share/applications/terasology-devbuild.desktop"

    rm "$srcdir/terasology-devbuild" "$srcdir/terasology-devbuild.desktop" "$srcdir/Terasology.zip"

    #remove files/dirs for other operating systems
    rm run_macosx.command Terasology.exe
    rm -r natives/{macosx,windows}

    cp -ra "$srcdir" "$pkgdir/usr/share/terasology-devbuild"
} 
