# Maintainer: Max Bruckner
pkgname=gentoo-mirrorselect
pkgver=2.2.2
pkgrel=1
pkgdesc="Script for selecting Gentoo mirrors."
arch=( 'any' )
url="http://sources.gentoo.org/cgi-bin/viewvc.cgi/gentoo-x86/app-portage/mirrorselect/mirrorselect-9999.ebuild"
license=('GPL2')
depends=('python' 'netselect' 'dialog' 'ssl-fetch' )
makedepends=('git')

build() {
    cd "$srcdir"
    rm -rf mirrorselect
    git clone git://git.overlays.gentoo.org/proj/mirrorselect.git mirrorselect
    cd mirrorselect
    git checkout $pkgver
    ./setup.py build
}

package() {
    cd "$srcdir"
    cd mirrorselect
    ./setup.py install --prefix='/usr/' --root="$pkgdir"
}
