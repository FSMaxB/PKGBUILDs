# Maintainer: Max Bruckner
pkgname=ssl-fetch
pkgver=0.2
pkgrel=1
pkgdesc="python-ssl-fetch, a dependency of gentoo-mirrorselect."
arch=('any' )
url="https://github.com/dol-sen/ssl-fetch"
license=('GPL2')
depends=('python' 'python-requests' )
makedepends=('git')

build() {
    cd "$srcdir"
    rm -rf ssl-fetch
    git clone https://github.com/dol-sen/ssl-fetch
    cd ssl-fetch
    git checkout $pkgver
    sed -i -e "s/Git/$pkgver/g" sslfetch/__init__.py   #Set right version number
    python setup.py build
}

package() {
    cd "$srcdir"
    cd ssl-fetch
    python setup.py install --prefix='/usr/' --root="$pkgdir"
}
